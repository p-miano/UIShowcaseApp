<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/small_margin">

    <!-- ImageView for the item image -->
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/grid_item_image_size"
        android:layout_height="@dimen/grid_item_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:tint="@color/grid_icon_color" />

    <!-- TextView for the item label -->
    <TextView
        android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_label"
        android:textColor="@color/grid_item_text_color"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/grid_item_text_margin_top" />
</LinearLayout>
